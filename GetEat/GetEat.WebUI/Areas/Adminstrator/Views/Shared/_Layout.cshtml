<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="container-fluid">
        <div id="mayNavbar" class="navbar navbar-default navbar-fixed-top" role="navigation">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header">

                    <a class="navbar-brand navbar-left responsive" href="/">
                        <img class="responsive" src="~/Content/images/Logo.png" />
                    </a>

                </div>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Organisations", "Index", "Organisations", new { area = "Adminstrator"}, null)</li>
                    <li>@Html.ActionLink("Restourants", "Index", "Restourants", new { area = "Adminstrator"}, null)</li>
                    <li>@Html.ActionLink("Kitchens", "Index", "Kitchens", new { area = "Adminstrator" }, null)</li>


                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid body-content">
        @RenderBody()
        @*<hr class="hidden" />*@
        <footer>
            <div class="responsive navbar-default" role="navigation">
                <div class="navbar-header">
                    <ul class="nav navbar-nav footer">
                        <li><a href="#">About us</a></li>
                        <li><a href="#">Terms and conditions</a></li>
                        <li><a href="#">Contact us</a></li>
                    </ul>
                </div>

            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>