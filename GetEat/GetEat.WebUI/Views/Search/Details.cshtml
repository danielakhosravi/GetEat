@model DomainModel.Entities.Restourant

@{
    ViewBag.Title = "Details";
}
<div class="container-fluid">
    <div class="profilbkgr center-content">
        <div class="row center-content">
            <div>
                <button class="book">Book this restourant</button>
                @*<p>
                         @Html.ActionLink("Back to List", "Index")
                    </p>*@
            </div>
            <div class="transperant">
                <div class="col-md-6">
                    <p>
                        @Model.Organisation.Name
                        @Model.Description
                        @Model.Name
                        @Model.Address.Neighborhood
                        @Model.Address.Street
                        @Model.Address.Number
                        @Model.Address.City
                        @Model.Address.Country
                    </p>
                </div>

                <div class="col-md-6">
                    <p>  img galeri</p>
                    <img src="~/Content/images/rest2.jpg" />
                </div>
            </div>
                <div class="row">
                    @if (User.Identity.IsAuthenticated)
            {
                        @Html.Partial("~/Views/Reviews/Create.cshtml", new ReviewViewModel() { RestourantId = Model.Id })
                    }
                    else
                    {
                        <p>you have to log in to write review</p>
                    }

                    @Html.Action("Index", "Reviews", new { id = Model.Id })
                </div>
            </div>
    
    </div>
</div>


