@model DomainModel.Entities.Restourant

@{
    ViewBag.Title = "Details";
}
<div class="container-fluid">
    <div class="logbackground center-content">
        <div class="container">
            <div>



                @*<p>@Html.ActionLink("Back to List", "Index")</p>*@
            </div>

            <!-- Trigger the modal with a button -->
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content text-center">
                        <div class="modal-header ">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Fined your GetEat place</h4>
                        </div>
                        <div class="modal-body">

                            <p>Make reservation.</p>
                            <div class="holder-input">
                                <div class="form-group">
                                    <select class="selectpicker form-control">
                                        <option value="1">1 person</option>
                                        <option value="2">2 people</option>
                                        <option value="3">3 people</option>
                                        <option value="4">4 people</option>
                                        <option value="5">5 people</option>
                                        <option value="6">6 people</option>
                                        <option value="7" selected="selected">7 people</option>
                                        <option value="8">8 people</option>
                                        <option value="9">9 people</option>
                                        <option value="10">10 people</option>
                                        <option value="11">11 people</option>
                                        <option value="12">12 people</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class='input-group datepicker' id='datetimepicker1'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group timepicker">
                                        <input id="timepicker2" type="text" class="form-control ">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-time"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default" data-dismiss="modal">Reserved</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-md-6 wrap">
                    <div class="review">
                        <div class="restorant">
                            <div class="text-center">
                                <h2>Raffy Bar & Gelato Park</h2>
                                <div class="form-group">
                                    <div>
                                        <button type="button" class="book" data-toggle="modal" data-target="#myModal">book table here</button>
                                    </div>

                                    <div id="rating">
                                        <ul class="stars">
                                            @{
                                                var score = Model.Reviews.Count > 0 ? Model.Reviews.Average(x => x.Score) : 0;
                                            }
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (score >= i)
                                                {
                                                    <li class="raiting-star active">★</li>
                                                }
                                                else
                                                {
                                                    <li class="raiting-star">★</li>
                                                }
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="middle">
                                <span class="glyphicon glyphicon-map-marker info"><strong> Район:</strong> бул. Цариградско шосе 111 В, Sofia Tech Park</span>
                                <span class="glyphicon glyphicon-cutlery info"><strong> Кухня:</strong> Суши, Рибна, Пица, Италианска и Интернационална</span>
                            </div>
                        </div>
                     
                        <article class="overview">
                            <h4 class="text-center">За ресторанта</h4>
                            Заповядайте в "RAFFY PARK BAR" София, който се намира на адрес София, Бул. Цариградско Шосе 111 В, София Тех Парк, сграда Уолтопия. Заведението има капацитет от 120 места и е един от ресторантите в град София, който предлага следните типове кухня: Българска, Европейска, Италианска, Средиземноморска , както и следните услуги и екстри: Wi Fi, Паркинг, Безкасово плащане, Климатик, Градина/ тераса, Обедно меню, Промоции.
                            Рeсторанта е подходящ за организиране и празнуване на специални събития - сватби, кръщенета, рождени дни, детски партита, фирмени партита, частни партита.
                        </article>
                        @*<p>
                                @Model.Organisation.Name
                                @Model.Description
                                @Model.Name
                                @Model.Address.Neighborhood
                                @Model.Address.Street
                                @Model.Address.Number
                                @Model.Address.City
                                @Model.Address.Country
                            </p>*@
                    </div>
                </div>
                <div class="col-md-6 wrap">
                    <p>  img galeri</p>
                    <img src="~/Content/images/rest2.jpg" />
                </div>

            </div>

            <div class="row col">
                <div class="comment-box">
                    <h3>Review</h3>

               
                    @if (User.Identity.IsAuthenticated)
                        {
                                    @Html.Partial("~/Views/Reviews/Create.cshtml", new ReviewViewModel() { RestourantId = Model.Id })
                                }
                                else
                                {
                                    <p>you have to log in to write review</p>
                                }

                                @Html.Action("Index", "Reviews", new { id = Model.Id })

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/geteat/home.js"></script>
}
