
@model GetEat.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    
    <div class="logbackground">
        <h2>@ViewBag.Title.</h2>
        <div class="row transperant">
            
            @Html.AntiForgeryToken()
            <h1 class="text-center">Create a new account.</h1>
            <hr class="hidden" />
            @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
            <div class="form-group">
                               
                <div class="col-6 col-md-offset-5">
                    <ul id="smt" class="list-inline">
                        <li class="linksaccount">
                            <a  id="registrate" href="#$" >Restouranter</a>
                        </li>
                        <span>or</span>
                        <li class="linksaccount">
                            <a href="#" id="logIn">Book your table</a>
                        </li>
                    </ul>
                    @Html.CheckBoxFor(m => m.IsCustomerElseVisitor, new { @class = "regbox", })
                    @*@Html.LabelFor(m => m.IsCustomerElseVisitor, new { @class = "control-label" })*@
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-6 col-md-4 control-label" })
                <div class="col-6 col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-6 col-md-4 control-label" })
                <div class="col-6 col-md-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-6 col-md-4 control-label" })
                <div class="col-6 col-md-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btnAll" value="Register" />
                </div>
            </div>
        </div>
    </div>

}

@section scripts {
    <script type="text/javascript" src="~/Scripts/geteat/home.js">

    </script>
}


