@model IEnumerable<ReviewViewModel>

@{
    ViewBag.Title = "Index";
}



@if (Model.Any())
{

    foreach (var item in Model)
    {
        <div class="row list-coments">
            <div class="help-block text-center col-md-4">
                <span>@item.WrittenDate</span>
                <span>@item.Commentator</span><br />
                <img class="img-circle user-img" src="~/Content/images/person-coment.jpg" />
            </div>
            <div class="help-block col-md-4 user-opinion">
                <p>@item.Comment</p>
            </div>
            <div class="col-md-4" id="rating">
                <ul class="stars text-center">
                    @{
                        var score = item.Score;
                    }
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (score >= i)
                        {
                    <li class="raiting-star active">★</li>
                        }
                        else
                        {
                    <li class="raiting-star">★</li>
                        }
                    }

                </ul>
            </div>
        </div>
    }
}
else
{
 <p class="comment">No comments</p>
}


