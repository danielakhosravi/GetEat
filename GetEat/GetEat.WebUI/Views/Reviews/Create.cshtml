@model ReviewViewModel

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm("Create", "Reviews", "Post"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.RestourantId)

        <div class="form-group col-md-8 col-md-offset-4 ">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label" })
            <div >
                @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-offset-8 col-md-4">
            <ul class="stars">
                <li class="raiting-star">★</li>
                <li class="raiting-star">★</li>
                <li class="raiting-star">★</li>
                <li class="raiting-star">★</li>
                <li class="raiting-star">★</li>
            </ul>
            <input type="hidden" name="score" id="score" />
        </div>



        <div class="form-group">
            <div class="col-md-4 ">
                <input type="submit" value="Submit" class="btn btn-share" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
